- var linkItems = ['facebook', 'twitter', 'google', 'linkedin']
- var linkUrls = ['facebook.com', 'twitter.com', 'google.com', 'linkedin.com']
footer.footer
	.footer__top
		.container
			.footer__title Get in touch
			.footer__links
				each item, key in linkItems
					a(href="http://" + linkUrls[key] target="_blank" class="footer__social")
						i(class="fab fa-" + item aria-hidden="true")
							span.visually-hidden=linkItems
			.footer__text Subcribe to our newsletters to stay update
			form(action="#" method="post")
				.footer__field: input.footer__input(type="email" placeholder="Email Address")
				button(type="submit").button Subcribe

	.footer__bottom
